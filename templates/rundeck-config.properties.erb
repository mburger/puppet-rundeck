grails.serverURL=https://<%= @rd_url %>/

dataSource.driverClassName=org.postgresql.Driver
dataSource.url=jdbc:postgresql://<%= @db_server %>:<%= @db_port %>/<%= @db_name %>?<%= @db_url_params %>
dataSource.username=<%= @db_user %>
dataSource.password=<%= @db_pass %>
dataSource.initialSize=50
dataSource.maxActive=100
dataSource.minIdle=10
dataSource.maxIdle=50
dataSource.maxWait=-1
dataSource.removeAbandoned=false
dataSource.testOnBorrow=true
dataSource.validationQuery=SELECT 1
dataSource.validationQueryTimeout=1

